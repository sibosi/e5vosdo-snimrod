# App configuration
NEXTAUTH_URL=http://localhost:3000
IGNORE_BUILD_ERRORS=false
AUTH_TRUST_HOST=true
AUTH_SECRET= # Generálás: openssl rand -base64 32


# Database configuration
MYSQL_HOST=localhost # pl localhost
MYSQL_PORT=3306 # pl 3306
MYSQL_DATABASE=e5info # Adatbázis neve
MYSQL_USER=root # MySQL felhasználónév (pl. root)
MYSQL_PASSWORD= # MySQL jelszó

NEXT_PUBLIC_SUPABASE_URL= # Supabase projekt URL: https://app.supabase.com > Project Settings > API
NEXT_PUBLIC_SUPABASE_ANON_KEY= # Supabase anon key: https://app.supabase.com > Project Settings > API
SUPABASE_SERVICE_ROLE_KEY= # Supabase service role key: https://app.supabase.com > Project Settings > API (csak szerver oldalon!)


# Database backup configuration
BACKUP_FOLDER_ID= # Google Drive mappa ID a biztonsági másolatokhoz
ENCRYPTION_PASSWORD= # Erős jelszó a biztonsági másolatok titkosításához


# Web push configuration
PUBLIC_VAPID_KEY= # Generálás: npx web-push generate-vapid-keys
PRIVATE_VAPID_KEY= # Generálás: npx web-push generate-vapid-keys


