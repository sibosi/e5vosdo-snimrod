CAMERA_PHOTOS_DRIVE_FOLDER_ID= # Google Drive mappa ID kamera fotókhoz
SZALAGAVATO_SECRET= # Jelszó a külső hozzáféréshez (szalagavató integráció)


# Settings for e5podcast integration
RSS_FEED_URL= # Teszt bármilyen RSS feed URL-lel


# Google Drive developer account (Service Account)
SERVICE_ACCOUNT_KEY= # Google Cloud Console > IAM & Admin > Service Accounts > Keys > Create New Key (JSON formátum)
